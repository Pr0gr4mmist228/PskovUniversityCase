<?xml version="1.0" encoding="utf-8"?>
<Page
	x:Class="PskovUniversityCase.EmployerResourses.EmployerAccountMenu" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	Title="EmployerAccountMenu"
	Width="800"
	Height="500">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition
				Height="0,3*"></RowDefinition>
			<RowDefinition
				Height="1,2*"></RowDefinition>
			<RowDefinition
				Height="*"></RowDefinition>
		</Grid.RowDefinitions>
		<StackPanel
			Background="LightBlue"
			Orientation="Horizontal">
			<TextBlock
				x:Name="textWelcome"
				VerticalAlignment="Center"
				Margin="10,0,0,0"
				HorizontalAlignment="Left">Добро пожаловать, </TextBlock>
		</StackPanel>
		<StackPanel
			Background="White"
			Orientation="Vertical"
			Grid.Row="1">
			<Button
				Style="{StaticResource ResourceKey=buttonFunctionStudent}"
				x:Name="buttonAddVacancy"
				Click="buttonAddVacancyClick">Добавить вакансию</Button>
		</StackPanel>
	</Grid>
</Page>